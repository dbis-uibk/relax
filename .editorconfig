root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = false

[*.ts,*.tsx]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

[*.pegjs]
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = false